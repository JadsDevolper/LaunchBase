<div class="item">
  <div>Foto</div>
  <input 
    type="url" 
    name="avatar_url" 
    placeholder="  http://"
    value=" {{ dog.avatar_url }}"
  >
</div>

<div class="item">
  <div>Nome</div>
  <input 
    type="text" 
    name="name" 
    placeholder="  Nome do seu Pet"
    value=" {{ dog.name }}"
  >
</div>

<div class="item">
  <div>Data de Nascimento</div>
    <input 
      type="date" 
      name="birth"
      value="{{ dog.birth }}"
    >
</div>

<div class="item">
<div>Raça</div>
  <input 
    type="text" 
    name="breed" 
    placeholder="  Raça"
    value=" {{ dog.breed }}"
  >
</div>

<div class="item">
<div>Gênero</div>

  <span>
    <input 
      type="radio" 
      name="gender" 
      value="M"
      {% if dog.gender == 'M' %}
        checked
      {% endif %}
    >Masculino
  </span>

  <span>
    <input 
      type="radio" 
      name="gender"
      value="F"
      {% if dog.gender == 'F' %}
        checked
      {% endif %}
    >Feminino
  </span>

</div>

<div class="item">
  <div>Habilidades</div>
  <input 
    type="text" 
    name="abiliity" 
    placeholder="  separe as habilidades por virgula"
    value="{{ dog.abiliity }}"
  >
</div>

<div class="item">
<div>Ultima Vacinação</div>
  <input 
    type="date" 
    name="vaccine"
    value="{{ dog.vaccine }}"
  >
</div>

<button type="submit">Salvar</button>